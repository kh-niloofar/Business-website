@model IEnumerable<DataLayer.Blog>

@{
    ViewBag.Title = "Index";
}

<h2>لیست مقالات</h2>

<p>
    @Html.ActionLink("ایجاد مقاله جدید", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BlogImageName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BlogCats.CatName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BlogSubject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BlogDesc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BlogTag)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BlogVisit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BlogDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        <img src="~/BlogImages/@item.BlogImageName" class="thumbnail" style="max-width:120px" />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BlogCats.CatName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BlogSubject)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BlogDesc)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.BlogTag)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BlogVisit)
    </td>
    <td>
        @item.BlogDate.ToShamsi()
    </td>
    <td>
        @Html.ActionLink("ویرایش", "Edit", new { id = item.BlogId }) |
        @Html.ActionLink("جزئیات", "Details", new { id = item.BlogId }) |
        @Html.ActionLink("حذف", "Delete", new { id = item.BlogId })
    </td>
</tr>
}

</table>
