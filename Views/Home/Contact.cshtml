@{
    ViewBag.Title = "Contact";
}
@section section{
    <section class="about-us-header">
        <div class="col-lg-12 p-0">
            <h1 class="text-center text-white font-weight-bolder display-1" style="line-height: 700px;">تماس با ما</h1>
        </div>
    </section>
}

<div class="container contactUS">
    <div class="map">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3239.7319682203097!2d51.41308831525957!3d35.708212880187936!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3f8e0176a50a8b9b%3A0x7a4df6fb28189518!2sTehran%20Province%2C%20Tehran%2C%20District%206%2C%20Nejatollahi%20St!5e0!3m2!1sen!2s!4v1622448553290!5m2!1sen!2s" width="100%" height="750px" style="border:0;" frameborder="0" allowfullscreen="" loading="lazy"></iframe>
    </div>
    <div class="contact-form">
        <h1 class="title">تماس با ما</h1>
        <h2 class="subtitle">پاسخگوی سئوالات شما هستیم.</h2>
        <form action="">
            <input type="text" name="name" placeholder="نام شما" />
            <input type="email" name="e-mail" placeholder="آدرس ایمیل شما" />
            <input type="tel" name="phone" placeholder="شماره تماس" />
            <textarea name="text" id="" rows="8" placeholder="پیام شما"></textarea>
            <button type="submit" class="btn-send">ارسال</button>
        </form>
    </div>
</div>