@model IEnumerable<DataLayer.Blog>

<div style="height:100px"></div>

<div class="container mt-5">
    <div class="row mt-3">
        <h3>مقالات نوشته شده با تگ @ViewBag.tag</h3>
    </div>
    <div class="row mt-5">
        @foreach (var item in Model)
        {
            <div class="col-sm-12 col-lg-4">
                <div class="post-slide2 text-right">
                    <div class="post-img">
                        <a href="#"><img src="~/BlogImages/@item.BlogImageName" alt=""></a>
                    </div>
                    <div class="post-content">
                        <h3 class="post-title"><a href="#">@item.BlogSubject</a></h3>
                        <p class="post-description">
                            @item.BlogDesc
                        </p>
                        <ul class="post-bar">
                            <li>
                                <i class="fa fa-clock-o" style="color: #1A1919;"></i>
                                شروع پروژه در @item.BlogDate.ToShamsi()
                            </li>
                        </ul>
                        <a href="#" class="read-more">بیشتر بخوانید</a>
                    </div>
                </div>
            </div>
        }


    </div>
</div>
